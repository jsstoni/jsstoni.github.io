---
import Layout from "../layouts/Layout.astro";
import Icon from "../components/Icon.astro";
---

<Layout title="Jesus Perez - BannedNull">
  <main>
    <section
      class="flex flex-col text-center justify-center items-center md:w-[770px] mx-auto h-screen"
    >
      <img
        src="./profile.webp"
        class="rounded-full"
        width="110"
        height="110"
        alt="profile bannednull"
      />
      <h1>ðŸ‘‹ Hi, I'am Jesus Perez</h1>
      <h2 class="text-[60px] leading-[65px] font-bold w-[90%] md:w-full">
        Creative, Full Stack <span>Developer</span>
      </h2>
      <a
        href="https://www.linkedin.com/in/jsstoni/"
        class="bg-zinc-700 text-white py-2 px-7 rounded-3xl mt-5 transform animate-bounce"
        >Contact me</a
      >

      <div class="flex flex-col items-center w-full">
        <div class="flex-1">
          <div
            class="flex flex-wrap mx-auto gap-5 justify-center items-center mt-5 text-center"
          >
            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="expressjs_dark" width="40" height="40" />
              <small>Express</small>
            </div>

            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="php" width="40" height="40" />
              <small>PHP</small>
            </div>

            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="nuxt" width="40" height="40" />
              <small>Nuxt</small>
            </div>

            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="nextjs" width="40" height="40" />
              <small>Next.js</small>
            </div>

            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="mysql" width="40" height="40" />
              <small>MySQL</small>
            </div>

            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="javascript" width="40" height="40" />
              <small>JS</small>
            </div>

            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="vue" width="40" height="40" />
              <small>VueJS</small>
            </div>

            <div
              class="py-2 px-3 bg-zinc-800 shadow-black shadow-sm rounded-xl"
            >
              <Icon icon="react" width="40" height="40" />
              <small>React</small>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  ol {
    list-style: circle;
  }
</style>
